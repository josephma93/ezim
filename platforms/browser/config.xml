<?xml version='1.0' encoding='utf-8'?>
<widget id="com.github.josephma93.ezim" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>ezim</name>
    <description>
        Easy Inventory Management. Allows to manage inventories in an easy manner with basic features.
    </description>
    <author email="josephma93@gmail.com" href="https://www.linkedin.com/in/josephmontero">
        Joseph Montero Arguedas
    </author>
    <content src="index.html" />
    <gap:plugin name="phonegap-admob" source="npm" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-build-tool" value="gradle" />
</widget>
